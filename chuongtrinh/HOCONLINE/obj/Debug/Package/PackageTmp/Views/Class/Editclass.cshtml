@model  HOCONLINE.Models.LopHoc
@{

    ViewData["Title"] = "Edit class";
    Layout = "~/Views/Shared/Layoutclass.cshtml";
    
}
<style type="text/css">


    .frameaccount {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        background-color: #3C4858;
        margin-top: -20px;
    }

    .account {
        position: relative;
        text-align: left;
        border: 2px solid #000000;
        width: 30%;
        height: 80%;
        background: white;
        padding: 40px;
        border-radius: 10px;
        margin: 50px auto;
        display: block;
    }

    textarea {
        border-radius: 10px;
        width: 100%;
        height: 20%;
        max-height:30%;
        resize: none
    }

    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $("#image").change(function () {
            $("#hinhanh").remove();
            var anh = $("#image").get(0);
            $("#anh").before("<img src=" + URL.createObjectURL(anh.files[0]) + " height='100' style='border-radius:10px;' id='hinhanh' />");

        });

    });


</script>
<div class="frameaccount">



    <div class="account">
        @using (Html.BeginForm("Checkeditclass", "Class", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div style="background-image:linear-gradient(60deg, #ab47bc, #8e24aa); position: relative; width: 90%; right: 20px; left: 20px; top: -60px; border-radius: 5px;text-align:left;padding:20px"><label style="color:white">Edit Class</label><br /><label style="color:white">Complete your Class</label></div>



            <div class="form-group bmd-form-group" style="margin-top:-40px">
                <label class="bmd-label-floating">Class Name</label><br />

                @Html.TextAreaFor(model => model.TenLop, new { @class = "text1", @autofocus = "autofocus", placeholder = "Class Name", @required = "required" })<br />

            </div>

            <div class="form-group bmd-form-group">
                <label class="bmd-label-floating">Class information</label><br />
                @Html.TextAreaFor(model => model.ThongTinLopHoc, new { @class = "text2", @autofocus = "autofocus", placeholder = "Class information ", @required = "required" })<br />
            </div>


            <div class="form-group bmd-form-group">

                <img src=@Model.Hinhanh height="100"  style="border-radius: 10px;" id="hinhanh" />
                <label class="glyphicon glyphicon-picture" for="image" id="anh"></label>
                <input type="file" id="image" style="display:none;" accept=".png, .jpg, .jpeg" name="file" />
            </div>

            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary " style="margin-top:20px;border-radius:50px">Update Class</button>

            </div>



            @Html.ValidationMessage("Erroreditaccount", new { @class = "text-danger", @color = "red" })


        }

    </div>




</div>
