<link href="~/Content/css/addclass.css" rel="stylesheet" />

<div class="frameclass">

    <div class="createclass">
       
        @using (Html.BeginForm("createclass", "Class", FormMethod.Post))
        {
            <div class="divaddclass"><label style="color:white">Add Class</label><br /></div>

            @Html.AntiForgeryToken()

            <div class="form-group bmd-form-group" style="margin-top:-20px">
                <label class="bmd-label-floating">Class Name</label><br />
                <textarea rows="5" cols="100" name="classname" required> </textarea>

            </div>
            <div class="form-group bmd-form-group" >
                <label class="bmd-label-floating">Class Infro</label><br />
               <textarea rows="5" cols="100" name="inforclass" required ></textarea>
            </div>


            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary addclass" >Add</button>
            </div>

            <br />



            


        }

    </div>

</div>
