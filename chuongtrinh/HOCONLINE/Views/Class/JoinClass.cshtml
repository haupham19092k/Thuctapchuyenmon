@{
    Layout = "~/Views/Shared/LayoutHome.cshtml";

}
<style type="text/css">

    input {
        border-radius: 10px;
    }
    .frameclass {
        width: 100%;
        height: 100%;
        position: fixed;
        display: block;
        background: rgba(0,0,0,0.5);
        margin-top: -20px;
    }

    .Joinclass {
        position: relative;
        text-align: left;
        border: 2px solid #000000;
        width: 400px;
        height: auto;
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        margin: 10% auto;
        display: block;
    }

    textarea {
        border-radius: 10px;
    }

    .glyphicon-remove-circle:hover {
        background-color: black;
        border-radius: 10px;
    }
    .divjoinclass {
        background-image: linear-gradient(60deg, #ab47bc, #8e24aa);
        position: relative;
        width: 90%;
        right: 20px;
        left: 20px;
        top: -70px;
        border-radius: 5px;
        text-align: left;
        padding: 20px
    }
    input{
        outline:none;
    }
</style>


<div class="frameclass">



    <div class="Joinclass">
        @using (Html.BeginForm("checkclass", "Class", FormMethod.Post))
        {
            <div class="divjoinclass"><label style="color:white">Join Class</label><br /></div>

            @Html.AntiForgeryToken()

            <div class="form-group bmd-form-group" style="margin-top:-20px">
                <label class="bmd-label-floating">Class Code</label><br />
                <input type="text" name="maclassid" placeholder="Mã Lớp" required style="width:100%"/><br />
            </div>


            <div class="form-group bmd-form-group">
                <button type="submit" class="btn btn-primary " style="margin-top:20px;border-radius:50px">Join</button>
            </div>

            <br />
            @Html.ValidationMessage("ErrorJoinClass", new { @class = "text-danger", @color = "black" })

        }

    </div>


</div>
